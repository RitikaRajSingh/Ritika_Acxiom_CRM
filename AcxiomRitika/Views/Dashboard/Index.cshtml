
@model AcxiomRitika.Models.DashboardViewModel

 @{
    Layout = "_Layout";
}

<h2>Welcome to the Dashboard</h2>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ERP Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background: blue
            ;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: #1f2937;
            padding-top: 20px;
            color: white;
        }

            .sidebar a {
                padding: 12px 20px;
                display: block;
                color: #d1d5db;
                text-decoration: none;
                font-size: 17px;
            }

                .sidebar a:hover {
                    background: #374151;
                }

        .content {
            margin-left: 260px;
            padding: 25px;
        }
    </style>
</head>

<body>

   


    <div class="sidebar">
        <h3 class="text-center">Dashboard</h3>
        <hr style="background:white">

        <a asp-controller="Dashboard" asp-action="Index">🏠 Home</a>

        <a asp-controller="Customer" asp-action="Index">👤 Customer</a>

        <a asp-controller="Employee" asp-action="Index">👨‍💼 Employee</a>

        <a asp-controller="Reports" asp-action="Index">📊 Reports</a>

        <a asp-controller="Setting" asp-action="Index">⚙ Settings</a>

        <a asp-controller="Logout" asp-action="Index">🔓 Logout</a>

    </div>

   


     <style>
        .hero {
            border-radius: 12px;
            padding: 22px;
            background: linear-gradient(135deg, #ffffffcc 0%, #e9f1ffcc 50%, #f0f7ff 100%);
            box-shadow: 0 6px 20px rgba(16,24,40,0.08);
            margin-bottom: 20px;
        }

        .search-box {
            max-width: 550px;
        }

        .summary-card {
            border-radius: 12px;
            padding: 18px;
            background: linear-gradient(90deg, #0ea5a4 0%, #2563eb 100%);
            color: white;
            box-shadow: 0 6px 18px rgba(37,99,235,0.12);
        }

        .table-small td, .table-small th {
            padding: 8px 10px;
            font-size: 14px;
        }

        .result-section {
            margin-top: 20px;
        }

        .card {
            border-radius: 12px;
        }

        /* FIX Overlap */
        .dashboard-wrapper {
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 20px;
            padding-bottom: 40px;
        }
    </style> 
    
    <div class="dashboard-wrapper">

        <!-- Header + Search -->
       


        <div class="hero" style="margin-top: 60px;">
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-end">
                <div class="mb-3 mb-md-0">
                    <h3 class="mb-1">Welcome to the Dashboard</h3>
                    <p class="mb-0 text-muted">Quick overview and search across Employees & Customers.</p>
                </div>

                <div class="search-box w-70">
                    <form class="d-flex" method="get" asp-action="Index">
                        <input type="search" name="q" value="@Model.SearchTerm" class="form-control form-control-lg"
                               placeholder="Search employees or customers..." />

                        <button class="btn btn-primary btn-lg ms-2" type="submit">Search</button>

                        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">Clear</a>
                        }
                    </form>
                </div>
            </div>
        </div>


      


        <div class="row g-3 mb-3 justify-content-center">
            <div class="col-md-3 col-sm-6">
                <div class="summary-card">
                    <small>Total Employees</small>
                    <h2>@Model.TotalEmployees</h2>
                    <a asp-controller="Employee" asp-action="Index" class="text-white">View employees →</a>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="summary-card" style="background: linear-gradient(90deg,#ff7a59 0%,#ffb86b 100%);">
                    <small>Total Customers</small>
                    <h2>@Model.TotalCustomers</h2>
                    <a asp-controller="Customer" asp-action="Index" class="text-white">View customers →</a>
                </div>
            </div>
        </div>
       


        <!-- Results -->
        <div class="row g-4 result-section">

           

         
  
  
    </body>
    </html> 


