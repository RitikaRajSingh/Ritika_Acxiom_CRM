@model AcxiomRitika.Models.Customer

<h2>Add Customer</h2>

<form asp-action="Create" method="post">

    <label>Name</label>
    <input type="text" asp-for="CustName" class="form-control" required />

    <label>Email</label>
    <input type="email" asp-for="Email" class="form-control" required />

    <label>Phone</label>
    <input type="text" asp-for="Phone" class="form-control" required />

    <label>Address</label>
    <input type="text" asp-for="Address" class="form-control" required />

    <br />
    <button type="submit" class="btn btn-success">Save</button>
</form>

