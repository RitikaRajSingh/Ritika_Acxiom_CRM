

@model AcxiomRitika.Models.ReportsViewModel

@{
    ViewData["Title"] = "Reports";
    Layout = "_Layout";
}

<style>
    .report-title {
        font-weight: 700;
        letter-spacing: 1px;
        color: #34495e;
    }

    /* Summary Cards */
    .summary-card {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        padding: 25px;
        border-radius: 18px;
        color: white;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        transition: 0.3s;
    }

        .summary-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.25);
        }

        .summary-card h3 {
            font-size: 35px;
            margin-top: 5px;
            font-weight: bold;
        }

    /* Tables */
    .card-custom {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 25px rgba(0,0,0,0.12);
        transition: 0.2s;
    }

        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.20);
        }

    .card-header {
        background: #2575fc;
        color: white;
        font-size: 17px;
        font-weight: 600;
        padding: 15px;
    }

    .table thead {
        background: #ecf0f1;
        font-weight: 600;
    }
</style>

<div class="container-fluid">

    <h2 class="mt-3 mb-4 report-title">📊 Reports Dashboard</h2>

    <!-- Summary Section -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="summary-card">
                <small>Total Employees</small>
                <h3>@Model.TotalEmployees</h3>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="summary-card" style="background: linear-gradient(135deg, #ff6a00, #ee0979);">
                <small>Total Customers</small>
                <h3>@Model.TotalCustomers</h3>
            </div>
        </div>
    </div>

    <!-- Tables Section -->
    <div class="row">
        <!-- Employees -->
        <div class="col-md-6 mb-4">
            <div class="card card-custom">
                <div class="card-header">
                    <span>👨‍💼 Few Employees (Latest 5)</span>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-sm btn-light float-end">View All</a>
                </div>

                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Designation</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FewEmployees != null && Model.FewEmployees.Any())
                            {
                                int i = 1;
                                foreach (var e in Model.FewEmployees)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@e.EmpName</td>
                                        <td>@e.Designation</td>
                                        <td>@e.Email</td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted p-3">No employees found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Customers -->
        <div class="col-md-6 mb-4">
            <div class="card card-custom">
                <div class="card-header">
                    <span>🧑‍🤝‍🧑 Few Customers (Latest 5)</span>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-sm btn-light float-end">View All</a>
                </div>

                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FewCustomers != null && Model.FewCustomers.Any())
                            {
                                int j = 1;
                                foreach (var c in Model.FewCustomers)
                                {
                                    <tr>
                                        <td>@j</td>
                                        <td>@c.CustName</td>
                                        <td>@c.Email</td>
                                        <td>@c.Phone</td>
                                    </tr>
                                    j++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted p-3">No customers found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
